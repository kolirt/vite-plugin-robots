{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "sourceMap": false,
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
